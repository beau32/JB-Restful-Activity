doctype html
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  title= 'RESTful Custom Activity'
  meta(name='description', content='Validates Journey Builder config.js files for Custom Activities')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  link(rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css")
  link(rel='stylesheet', href='/stylesheets/style.css')

body!= body
  
  div#interface
      h1.centered= 'RESTful Custom Activity'
      p.centered
          if errorMessage
              strong= errorMessage
      hr
      block content

  script.
    window.jQuery || document.write('<script src="javascripts/jquery/jquery.min.js"><\/script>')
  script(src='javascripts/script.js')
