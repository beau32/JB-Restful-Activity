doctype html
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  title= pageTitle
  meta(name='description', content='Validates Journey Builder config.js files for Custom Activities')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  link(rel='stylesheet', href='stylesheets/normalize-css/normalize.css')
  link(rel='stylesheet', href='/stylesheets/style.css')
body!= body
  
  div#interface
      h1.centered= title
      p.centered
          if errorMessage
              strong= errorMessage
          else
              strong Journey Builder Custom Activity 
      hr
      block content

  script.
    window.jQuery || document.write('<script src="javascripts/jquery/jquery.min.js"><\/script>')
  script(src='javascripts/script.js')
